  height: 100%; /* Utilise tout l'espace vertical disponible */
}

.site-logo svg {
  width: 100%; /* La lettre "R" occupe toute la largeur */
  height: 100%; /* La lettre "R" occupe toute la hauteur */
}

/* Animation pour les lettres "R" et "A" */
#letter-R, #letter-A {
  stroke-dasharray: 1000;  /* Ajustez la valeur pour correspondre à la longueur du chemin */
  stroke-dashoffset: 1000;
  animation: draw 4s ease forwards;
}

@keyframes draw {
  to {
    stroke-dashoffset: 0;
  }
}

